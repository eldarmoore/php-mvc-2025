# Application Configuration
APP_NAME="MVC Framework"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_PORT=8080
APP_SSL_PORT=8443
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_KEY=

# Database Configuration (Docker)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=mvc_framework
DB_USERNAME=mvc_user
DB_PASSWORD=secret
DB_ROOT_PASSWORD=root
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

# Redis Configuration (Docker)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis

# Mail Configuration (Mailhog for development)
MAIL_DRIVER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# PHPMyAdmin Configuration
PHPMYADMIN_PORT=8081

# Mailhog Configuration
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# Docker User Configuration
USER_ID=1000
GROUP_ID=1000

# Xdebug Configuration
XDEBUG_MODE=off
# Set to 'debug' to enable debugging
# XDEBUG_MODE=debug,develop,coverage
