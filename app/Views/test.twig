{% extends "layouts/app.twig" %}

{% block title %}Test Page - {{ config('app.name') }}{% endblock %}

{% block styles %}
    .test-container {
        padding: 2rem;
    }

    .test-card {
        background: #f8f9fa;
        border-left: 4px solid #667eea;
        padding: 1.5rem;
        margin-bottom: 1rem;
        border-radius: 4px;
    }

    .test-card h3 {
        color: #667eea;
        margin-bottom: 0.5rem;
    }
{% endblock %}

{% block content %}
    <div class="test-container">
        <h1 style="color: #667eea; font-size: 2.5rem; margin-bottom: 1.5rem;">Twig Integration Test</h1>

        <div class="test-card">
            <h3>Template Engine</h3>
            <p>You are now using <strong>Twig</strong> templating engine!</p>
        </div>

        <div class="test-card">
            <h3>Variables</h3>
            <p>App Name: <strong>{{ config('app.name', 'Unknown') }}</strong></p>
            <p>Environment: <strong>{{ env('APP_ENV', 'production') }}</strong></p>
            <p>Current Year: <strong>{{ "now"|date("Y") }}</strong></p>
        </div>

        <div class="test-card">
            <h3>Custom Data</h3>
            {% if message %}
                <p>Message: <strong>{{ message }}</strong></p>
            {% else %}
                <p>No message provided</p>
            {% endif %}
        </div>

        <div class="test-card">
            <h3>Loops</h3>
            <ul style="margin-left: 1.5rem; list-style-type: disc;">
                {% for i in 1..5 %}
                    <li>Item {{ i }}</li>
                {% endfor %}
            </ul>
        </div>

        <div class="test-card">
            <h3>Features</h3>
            <ul style="margin-left: 1.5rem; list-style-type: disc;">
                <li>Template inheritance using <code>extends</code></li>
                <li>Blocks for content sections</li>
                <li>Built-in filters and functions</li>
                <li>Auto-escaping for security</li>
                <li>Custom functions (config, env, url, asset, csrf_token, etc.)</li>
            </ul>
        </div>

        <div style="margin-top: 2rem;">
            <a href="/" style="background: #667eea; color: white; padding: 0.75rem 1.5rem; border-radius: 4px; text-decoration: none; display: inline-block;">
                Back to Documentation
            </a>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script>
        console.log('Twig template loaded successfully!');
    </script>
{% endblock %}
